<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KMSCalendar.Views.NewAssignmentPage"
             Title="New Assignment">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel"
                     Clicked="Cancel_Clicked">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP"
                        Value="cancel.png" />
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>

        <ToolbarItem Text="Save" 
                     Clicked="Save_Clicked">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP" 
                        Value="save.png"/>
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Spacing="20"
                     Padding="15"
                     BackgroundColor="{DynamicResource NavigationBackground}">
            <Label Text="Name" 
                   FontSize="Medium" />
            <Entry Text="{Binding Assignment.Name}" 
                   FontSize="Small" />
            <Label Text="Description" 
                   FontSize="Medium" />
            <Editor Text="{Binding Assignment.Description}" 
                    FontSize="Small" 
                    Margin="0" />
            <Label Text="Due Date" 
                   FontSize="Medium" />
            <DatePicker Date="{Binding Assignment.DueDate}"  
                        Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>