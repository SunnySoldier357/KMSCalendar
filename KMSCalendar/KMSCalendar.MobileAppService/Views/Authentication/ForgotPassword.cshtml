@model KMSCalendar.MobileAppService.Models.ForgotPasswordModel
@section Title { Forgot Password for KMS Calendar }
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ForgotPassword</h1>

<h4>ForgotPasswordModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ForgotPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthenticationToken" class="control-label"></label>
                <input asp-for="AuthenticationToken" class="form-control" />
                <span asp-validation-for="AuthenticationToken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Url.Action("Index","Authentication")">Back to Home</a>
</div>

